{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Liopay Docs",
  "colors": {
    "primary": "#0a0a0a",
    "light": "#fafafa",
    "dark": "#0a0a0a"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Hướng dẫn sử dụng",
        "groups": [
          {
            "group": "Bắt đầu",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API tham khảo",
        "groups": [
          {
            "group": "API tham khảo",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Tạo QR code",
          "href": "https://qr.liopay.vn",
          "icon": "qrcode"
        },
        {
          "anchor": "Tin tức",
          "href": "https://liopay.vn/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Hỗ trợ",
        "href": "mailto:contact@liopay.vn"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Bắt đầu",
      "href": "https://app.liopay.vn"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/liopayvn",
      "github": "https://github.com/liopayvn",
      "facebook": "https://facebook.com/liopay"
    }
  }
}
